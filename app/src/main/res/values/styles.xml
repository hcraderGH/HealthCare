<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    
    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/ic_welcome</item>
    </style>
    
    <!--功能选项卡中主标题的样式-->
    <style name="MainTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:textColor">@color/main_title_text_color</item>
    </style>

    <!--功能选项卡中子标题的样式-->
    <style name="subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/subtitle_text_color</item>
    </style>

    <style name="subtitle_select_item">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>
    
    <style name="function_button">
        <item name="android:layout_width">@dimen/function_button_width</item>
        <item name="android:layout_height">@dimen/function_button_height</item>
        <item name="android:textColor">@color/function_button_text_color</item>
        <item name="android:textSize">@dimen/function_button_text_size</item>
    </style>

    <style name="RunningStatus">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="MyToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
    </style>

    <style name="switchStyle" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/setting_title_color</item>
    </style>

    <style name="SpinnerStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="SettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingBottom">@dimen/setting_item_padding_top_bottom</item>
        <item name="android:paddingTop">@dimen/setting_item_padding_top_bottom</item>
        <item name="android:paddingRight">@dimen/setting_item_padding_right_left</item>
        <item name="android:paddingLeft">@dimen/setting_item_padding_right_left</item>
    </style>

    <style name="ModifyDialogTextViewStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ModifyDialogAmountViewStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>


</resources>
