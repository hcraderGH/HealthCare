<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/ic_bookmark_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:textSize="16sp"
                android:id="@+id/titleTextView"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Title"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_pager_item_margin_top"
                android:orientation="horizontal">

                <TextView
                    style="@style/subtitle"
                    android:text="强度："/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spn_cauterize_grade"
                    style="@style/SpinnerStyle"/>
                <!--<Button-->
                <!--android:background="@drawable/selector_button_background"-->
                <!--android:id="@+id/btn_cauterize_grade"-->
                <!--style="@style/subtitle_select_item"-->
                <!--android:text="一档"/>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_pager_item_margin_top"
                android:orientation="horizontal">

                <TextView
                    style="@style/subtitle"
                    android:text="时间："/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spn_cauterize_time_grade"
                    style="@style/SpinnerStyle"/>

                <!--<Button-->
                <!--android:id="@+id/btn_cauterize_time"-->
                <!--style="@style/subtitle_select_item"-->
                <!--android:background="@drawable/selector_button_background"-->
                <!--android:text="@string/default_time"/>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_pager_item_margin_top"
                android:orientation="horizontal">

                <TextView
                    style="@style/subtitle"
                    android:text="强刺激："/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_stimulate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:theme="@style/switchStyle"
                    android:clickable="true" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>
