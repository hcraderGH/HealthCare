<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_device_scan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="com.dafukeji.healthcare.ui.DeviceScanActivity_bak2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/app_bar_color"
        style="@style/MyToolBar"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/title_controller"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:background="@color/app_bar_color"
            android:layout_height="100dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_search_background"/>

            <com.skyfishjy.library.RippleBackground
                android:id="@+id/rb_scan"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="#dc3941"
                app:rb_radius="32dp"
                app:rb_type="fillRipple"
                app:rb_rippleAmount="6"
                app:rb_duration="@integer/rb_duration"
                app:rb_scale="6">

                <ToggleButton
                    android:id="@+id/tb_scan"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:textOn="@null"
                    android:checked="false"
                    android:textOff="@null"
                    android:button="@null"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_scan_device"/>

                <com.romainpiel.shimmer.ShimmerTextView
                    android:id="@+id/stv_scan_string"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tb_scan"
                    android:text="点击搜索设备"
                    android:textColor="#cc000000"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"/>


            </com.skyfishjy.library.RippleBackground>

        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:padding="8dp"
            android:textSize="18dp"
            android:textColor="#aa000000"
            android:text="设备列表"
            android:layout_height="wrap_content"
            android:background="@color/item_divider"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rlv_scan_devices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


</LinearLayout>
