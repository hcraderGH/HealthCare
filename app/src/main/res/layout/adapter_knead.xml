<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/cardView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/titleTextView"
                android:textSize="16sp"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_pager_first_margin_top"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/subtitle"
                            android:text="旋向："/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spn_needle_orientation"
                            style="@style/SpinnerStyle"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_pager_item_margin_top"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/subtitle"
                            android:text="类型："/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spn_needle_type"
                            style="@style/SpinnerStyle"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_pager_item_margin_top"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/subtitle"
                            android:text="强度："/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>


                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spn_needle_grade"
                            style="@style/SpinnerStyle"/>
                        <!--<Button-->
                        <!--android:background="@drawable/selector_button_background"-->
                        <!--android:id="@+id/btn_knead_grade"-->
                        <!--style="@style/subtitle_select_item"-->
                        <!--android:text="一档"/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_pager_item_margin_top"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/subtitle"
                            android:text="频率："/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spn_needle_frequency"
                            style="@style/SpinnerStyle"/>

                        <!--<Button-->
                        <!--android:background="@drawable/selector_button_background"-->
                        <!--android:id="@+id/btn_knead_frequency"-->
                        <!--style="@style/subtitle_select_item"-->
                        <!--android:text="一档"/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_pager_item_margin_top"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/subtitle"
                            android:text="时间："/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spn_needle_time_grade"
                            style="@style/SpinnerStyle"/>

                        <!--<Button-->
                        <!--android:background="@drawable/selector_button_background"-->
                        <!--android:id="@+id/btn_knead_frequency"-->
                        <!--style="@style/subtitle_select_item"-->
                        <!--android:text="一档"/>-->

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/ic_bookmark_24dp"/>

    </FrameLayout>

</android.support.v7.widget.CardView>