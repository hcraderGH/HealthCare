<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"><!--灸处方功能-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/card_view1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/MainTitle"
                    android:drawableStart="@mipmap/ic_medical_box"
                    android:text="@string/cauterize"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/subtitle"
                        android:text="强度："/>

                    <Button
                        android:background="@drawable/time_button_selector"
                        android:id="@+id/btn_cauterize_grade"
                        style="@style/subtitle_select_item"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="一档"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/subtitle"
                        android:text="持续时间："/>

                    <Button
                        android:id="@+id/btn_cauterize_time"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        style="@style/subtitle_select_item"
                        android:background="@drawable/time_button_selector"
                        android:text="@string/default_time"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_cauterize_start"
                        style="@style/function_button"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/start_or_stop_button_selector"
                        android:text="开始"/>
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--针处方功能-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/card_view2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/MainTitle"
                    android:drawableStart="@mipmap/ic_medical_box"
                    android:text="@string/needle"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/subtitle"
                        android:text="强度："/>


                    <Button
                        android:background="@drawable/time_button_selector"
                        android:id="@+id/btn_needle_grade"
                        style="@style/subtitle_select_item"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="一档"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/subtitle"
                        android:text="持续时间："/>

                    <Button
                        android:id="@+id/btn_needle_time"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        style="@style/subtitle_select_item"
                        android:background="@drawable/time_button_selector"
                        android:text="@string/default_time"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_needle_start"
                        style="@style/function_button"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/start_or_stop_button_selector"
                        android:text="开始"/>
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--药处方-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/card_view3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/MainTitle"
                    android:drawableStart="@mipmap/ic_medical_box"
                    android:text="@string/medical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/subtitle"
                        android:text="加热温度："/>


                    <Button
                        android:background="@drawable/time_button_selector"
                        android:id="@+id/btn_medical_temp"
                        style="@style/subtitle_select_item"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="40℃"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/subtitle"
                        android:text="持续时间："/>

                    <Button
                        android:id="@+id/btn_medical_time"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        style="@style/subtitle_select_item"
                        android:background="@drawable/time_button_selector"
                        android:text="@string/default_time"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/btn_medical_start"
                        style="@style/function_button"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/start_or_stop_button_selector"
                        android:text="开始"/>
                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</ScrollView>
