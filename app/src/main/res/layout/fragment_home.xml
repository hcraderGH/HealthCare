<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="@color/app_bar_color"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <me.itangqi.waveloadingview.WaveLoadingView
            android:id="@+id/wlv_reminder_electric_quantity"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            app:wlv_borderColor="#00000000"
            app:wlv_borderWidth="0dp"
            app:wlv_progressValue="0"
            app:wlv_round_rectangle="false"
            app:wlv_shapeType="circle"
            app:wlv_titleCenter="0%"
            app:wlv_titleCenterColor="@color/disconnect_status"
            app:wlv_titleCenterSize="36sp"
            app:wlv_waveAmplitude="60"
            app:wlv_waveColor="@color/disconnect_status"
            app:wlv_titleBottom="剩余电量"
            app:wlv_titleBottomSize="14sp"
            app:wlv_titleBottomColor="@color/wlv_title_bottom_color"
            app:wlv_wave_background_Color="#ffffff"/>

        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/wlv_reminder_electric_quantity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_home_device_status_logo"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_circle_gray"/>

                <TextView
                    android:id="@+id/tv_home_device_status"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/disconnect_status"
                    android:textSize="12sp"
                    android:text="连接状态"/>

            </LinearLayout>

            <Button
                android:layout_marginRight="4dp"
                android:clickable="false"
                android:id="@+id/btn_home_device_status"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@mipmap/ic_device_disconnect"
                android:layout_gravity="end"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_home_current_temp_status_logo"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_circle_gray"/>

                <TextView
                    android:id="@+id/tv_home_current_temp_status"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/disconnect_status"
                    android:textSize="12sp"
                    android:text="当前温度"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_home_current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/disconnect_status"
                android:textSize="35sp"
                android:layout_gravity="end"
                android:text="0℃"/>



        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="330dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/app_bar_color"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_cure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="20dp"
            android:paddingEnd="@dimen/card_padding"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            android:paddingStart="@dimen/card_padding"/>
    </RelativeLayout>

</LinearLayout>
