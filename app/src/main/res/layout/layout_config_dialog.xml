<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="150dp"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/ModifyDialogTextViewStyle"
            android:text="灸的强度"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <com.dafukeji.healthcare.widget.AmountView
            android:id="@+id/av_cauterize_grade"
            style="@style/ModifyDialogAmountViewStyle"
            app:btnTextSize="14sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/ModifyDialogTextViewStyle"
            android:text="针的强度"/>


        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <com.dafukeji.healthcare.widget.AmountView
            android:id="@+id/av_needle_grade"
            style="@style/ModifyDialogAmountViewStyle"
            app:btnTextSize="14sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/ModifyDialogTextViewStyle"
            android:text="针的频率"/>

        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"/>

        <com.dafukeji.healthcare.widget.AmountView
            android:id="@+id/av_needle_frequency"
            style="@style/ModifyDialogAmountViewStyle"
            app:btnTextSize="14sp"
            app:btnWidth="36dp"
            app:tvWidth="50dp"/>
    </LinearLayout>

</LinearLayout>